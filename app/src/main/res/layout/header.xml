<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    xmlns:bootstrap="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background_material"
    android:orientation="vertical">

    <com.beardedhen.androidbootstrap.BootstrapCircleThumbnail
        android:id="@+id/navProfileImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        bootstrap:bct_image="@drawable/background_material"
        bootstrap:bct_minimal="true"
        android:layout_marginLeft="24dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="24dp"
        bootstrap:bct_size="middle" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="---------"
        android:textSize="14sp"
        android:textColor="#FFF"
        android:textStyle="bold"
        android:gravity="left"
        android:paddingBottom="4dp"
        android:id="@+id/navUserName"
        android:layout_above="@+id/navDepartment"
        android:layout_alignLeft="@+id/navProfileImage"
        android:layout_alignStart="@+id/navProfileImage" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="---------"
        android:id="@+id/navDepartment"
        android:gravity="left"
        android:layout_marginBottom="8dp"
        android:textSize="14sp"
        android:textColor="#fff"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/navUserName"
        android:layout_alignStart="@+id/navUserName" />

</RelativeLayout>